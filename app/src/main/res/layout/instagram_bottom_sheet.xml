<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:background="#2F000000"
    android:clickable="true"
    android:id="@+id/bottomsheet_Main_Relative">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_bottomsheet">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:weightSum="3"
            android:orientation="horizontal"
            android:id="@+id/bottom_sheet_top">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/gallery"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/screenshot"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:text="گرفتن اسکرین شات"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_below="@id/screenshot"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/feed"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/plus_post"
                    />
                <TextView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:text="اضافه کردن پست"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/plus_post"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:gravity="center"
                    android:id="@+id/textview_add_post"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <Switch
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:id="@+id/Darkmode_switch"
                    />
                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:textSize="@dimen/_12sdp"
                    android:text="Dark Mode"
                    android:textColor="@color/colorBlack"
                    android:layout_below="@id/Darkmode_switch"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textview_darkmode"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_below="@id/bottom_sheet_top"
            android:id="@+id/bottom_sheet_mid">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <Switch
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/switch_private"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/switch_private"
                    android:text="اکانت خصوصی"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:textStyle="bold"
                    android:id="@+id/textview_private"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <Switch
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/switch_blue_tick"
                />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/switch_blue_tick"
                    android:text="تیک آبی"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:textStyle="bold"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/minus"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/minus_post"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/minus_post"
                    android:text="حذف کردن آخرین پست"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:textSize="@dimen/_8sdp"
                    android:textStyle="bold"
                    android:id="@+id/textview_minus_post"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_below="@id/bottom_sheet_mid">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/minus"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/minus_highlight"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/minus_highlight"
                    android:text="حذف آخرین هایلایت"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:textSize="@dimen/_8sdp"
                    android:textStyle="bold"
                    android:id="@+id/textview_minus_highlight"
                    android:layout_marginTop="@dimen/_5sdp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/add_highlight"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:src="@drawable/feed" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/add_highlight"
                    android:text="اضافه کردن هایلایت"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:textSize="@dimen/_8sdp"
                    android:textStyle="bold"
                    android:id="@+id/textview_add_highlight"
                    android:layout_marginTop="@dimen/_5sdp"/>
            </RelativeLayout>
        </LinearLayout>



    </RelativeLayout>


</RelativeLayout>