<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_10sdp"
    android:background="#32000000"
    android:id="@+id/rel_ExitDialog">
    <RelativeLayout
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_300sdp"
        android:background="@drawable/shape_tooltip2"
        android:layout_centerInParent="true"
        android:clickable="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            android:layout_margin="@dimen/_10sdp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_15sdp"
            android:text="هنگام خروج اطلاعات ذخیره \nنمی شود. آیا می خواهید خارج شوید؟"
            android:gravity="center"
            android:id="@+id/temp"/>
        <TextView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerHorizontal="true"
            android:text="خروج"
            android:gravity="center"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/shape_backbtn_blue"
            android:layout_marginBottom="@dimen/_10sdp"
            android:id="@+id/btn_Exit"
            android:layout_above="@id/btn_screenshot_withwatermark"/>

        <TextView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="اسکرین شات"
            android:gravity="center"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/shape_backbtn_blue"
            android:layout_marginBottom="@dimen/_10sdp"
            android:id="@+id/btn_screenshot_withwatermark"/>
    </RelativeLayout>

</RelativeLayout>