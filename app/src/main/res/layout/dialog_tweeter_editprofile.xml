<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:clickable="false">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:padding="@dimen/_10sdp"
        android:id="@+id/tweeter_rel_editprofile_dialog">
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/close"
            android:layout_centerVertical="true"
            android:id="@+id/tweeter_close_edit"/>
        <TextView
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_30sdp"
            android:text="Edit Profile"
            android:layout_toRightOf="@id/tweeter_close_edit"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"/>
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/blue_checkmark"
            android:layout_alignParentRight="true"
            android:id="@+id/tweeter_blue_check_editProfile"/>

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tweeter_rel_editprofile_dialog">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:id="@+id/tweeter_rel_profilePhoto_editprofile"
        android:layout_below="@id/tweeter_rel_editprofile_dialog"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:id="@+id/rel_editHeaderImageview">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/post1"
                android:id="@+id/tweeter_editHeader_imageview"
                android:scaleType="centerCrop"/>
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_fi_rr_camera"
                android:id="@+id/ic_camera_profileheader"/>
        </RelativeLayout>
            <RelativeLayout
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginTop="@dimen/_60sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:id="@+id/tweeter_rel_changepPofilePhoto">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:src="@drawable/post1"
                    android:id="@+id/tweeter_imageview_dialog_editprofile"
                    app:civ_border_width="@dimen/_2sdp"
                    app:civ_border_color="@color/colorWhite"/>
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_fi_rr_camera"
                    android:id="@+id/ic_camera_profilephoto"/>
            </RelativeLayout>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tweeter_rel_profilePhoto_editprofile"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:orientation="horizontal"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:text="ID"
                android:textSize="@dimen/_15sdp"
                android:gravity="center_vertical"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:text="Sample ID"
                android:textSize="@dimen/_15sdp"
                android:id="@+id/tweeter_edittext_id"
                android:hint="ایدی"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:text="Name"
                android:textSize="@dimen/_15sdp"
                android:gravity="center_vertical"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:text="sample Username"
            android:textSize="@dimen/_15sdp"
            android:id="@+id/tweeter_edittext_username"
            android:hint="نام"/>
        </LinearLayout>
    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:text="Birth Date"
            android:textSize="@dimen/_15sdp"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_5sdp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:textSize="@dimen/_15sdp"
            android:id="@+id/tweeter_edittext_Born"
            android:hint="تاریخ تولد"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:text="Join"
            android:textSize="@dimen/_15sdp"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_5sdp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:textSize="@dimen/_15sdp"
            android:id="@+id/tweeter_edittext_Join"
            android:hint="تاریخ عضویت"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:text="Followers"
                    android:textSize="@dimen/_15sdp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_5sdp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:text="Followers"
                android:textSize="@dimen/_15sdp"
                android:id="@+id/tweeter_edittext_followers"
                android:hint="Followers"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:text="Following"
                    android:textSize="@dimen/_15sdp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_5sdp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:text="Following"
                android:hint="Following"
                android:textSize="@dimen/_15sdp"
                android:id="@+id/tweeter_edittext_following"
                />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bio"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Sample Bio is here"
            android:textSize="@dimen/_15sdp"
            android:hint="Sample Bio is here"
            android:id="@+id/tweeter_edittext_Bio"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ٌWebsite"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp"
            android:hint="Sample Website is here"
            android:id="@+id/tweeter_edittext_Website"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp"
            android:hint="Sample Location is here"
            android:id="@+id/tweeter_edittext_Location"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            android:weightSum="2">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:id="@+id/btn_addtweet">
                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/feed"
                    android:id="@+id/tweeter_addtweet_dialog"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_toRightOf="@id/tweeter_addtweet_dialog"
                    android:textSize="@dimen/_15sdp"
                    android:text="اضافه کردن توییت"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:id="@+id/btn_minustweet">
                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_minus"
                    android:id="@+id/tweeter_minustweet_dialog"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_toRightOf="@id/tweeter_minustweet_dialog"
                    android:textSize="@dimen/_15sdp"
                    android:text="حذف آخرین توییت"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Darkmode"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorBlack"/>
            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/Darkmode_switch" />
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="match_parent"
                android:src="@drawable/blue_tick"
                android:layout_marginLeft="@dimen/_20sdp"/>
            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/blueTickSwitch"/>
        </LinearLayout>
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tweeter_dialog_camera_gallery"
        android:visibility="gone"
        android:clickable="true"/>
</RelativeLayout>