<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_140sdp"
    android:layout_height="@dimen/_220sdp"
    android:orientation="vertical"
    android:weightSum="4"
    android:background="@drawable/shape_tooltip"
    android:padding="@dimen/_10sdp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/tooltip_photo"
        >
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_instagram_2"
            android:id="@+id/temp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Photo"
            android:layout_toRightOf="@id/temp"
            android:gravity="center_vertical"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="@dimen/_5sdp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/tooltip_video">
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_reel"
            android:id="@+id/temp1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Video"
            android:layout_toRightOf="@id/temp1"
            android:gravity="center_vertical"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="@dimen/_5sdp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/tooltip_igtv">
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_igtv"
            android:id="@+id/temp2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="IGTV"
            android:layout_toRightOf="@id/temp2"
            android:gravity="center_vertical"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="@dimen/_5sdp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/tooltip_multi">
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:src="@drawable/instagram_multi_photo_black2"
            android:id="@+id/temp3" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="multi"
            android:layout_toRightOf="@id/temp3"
            android:gravity="center_vertical"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="@dimen/_5sdp"/>
    </RelativeLayout>
</LinearLayout>