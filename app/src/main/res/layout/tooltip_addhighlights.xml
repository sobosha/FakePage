<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_140sdp"
    android:layout_height="@dimen/_180sdp"
    android:background="@drawable/shape_tooltip"
    android:padding="@dimen/_10sdp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/layerlist_camera"
        android:id="@+id/circleimage_add_highlights"/>
    <TextView
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@id/circleimage_add_highlights"
        android:text="نام هایلایت"
        android:layout_centerHorizontal="true"
        android:gravity="bottom"
        android:textSize="@dimen/_13sdp"
        android:id="@+id/temp_1"/>
    <EditText
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@id/temp_1"
        android:layout_centerHorizontal="true"
        android:id="@+id/edittext_highlights_name_add"
        android:textSize="@dimen/_13sdp"
        android:focusable="true"
        android:focusableInTouchMode="true"/>
    <TextView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="اضافه کردن"
        android:gravity="center"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/shape_backbtn_blue"
        android:layout_marginBottom="@dimen/_5sdp"
        android:id="@+id/btn_add_highlight"/>
</RelativeLayout>